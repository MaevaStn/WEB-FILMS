{% if status is not defined %}
	<form action="" method="post">
		<div class="card border-dark mb-5 mt-5 m-auto" style="width: 16rem; height:20rem">
			<div class="card-body m-auto">
				<div class="row">
					<div class="col-12 ml-3">
						<h2 class="col text-center pt-1  mb-4">Connexion</h2>
					</div<divclass="col-12mb-2mt-4m-auto">
					{% if pass is defined %}
						<label class="form-label">Email ou mot de passe incorrect</label>
					{% endif %}
					{% if mail is not defined %}
						<input name="mail" type="email" class="form-control mb-2" placeholder="Mail">
					{% else %}
						<input name="mail" type="email" class="form-control mb-2" placeholder="Mail">
					{% endif %}
					<input name="pass" type="password" class="form-control mb-1" placeholder="Password">
				</div>
			</div>
			<div class="row">
				<div class="col-11 m-auto form-check">
					<input name="remember" class="form-check-input mb-2" type="checkbox" value="remember">
					<label class="form-check-label mb-1" for="flexCheckDefault">Remember me</label>
				</div>
			</div>
			<div class="row">
				<div class="col-12 mb-1">
					<button type="submit" class="btn btn-primary mb-1">Connexion</button>
				</div>
			</div>
			<div class="row">
				<div class="col-12 m-auto">
					<a name="inscr" href="inscription">ou créer un compte</a>
				</div>
			</div>
		</div>
	</form>
{% else %}
	<div class="container text-center">
		<div class="row">
			<div class="col-12 m-auto text-center">
				<label class="form-label">Vous êtes connecté</label>
			</div>
		</div>
	</div>
{% endif %}
